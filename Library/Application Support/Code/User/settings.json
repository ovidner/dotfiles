{
  // Extensions
  "docker.enableLinting": true,
  "python.venvPath": "${env:HOME}/.virtualenvs",

  // Languages
  "[python]": {
    "editor.tabSize": 4
  },

  // Workaround for https://github.com/Microsoft/vscode/issues/25934
  "editor.disableTranslate3d": true,
  "window.zoomLevel": 0,
  "editor.minimap.enabled": false,

  // General
  "editor.autoIndent": true,
  "editor.cursorBlinking": "blink",
  "editor.cursorStyle": "line",
  "editor.fontFamily": "SFMono-Regular, Menlo, Monaco, 'Courier New', monospace",
  "editor.lineNumbers": "on",
  // "editor.minimap.enabled": true,
  "editor.renderIndentGuides": false,
  "editor.scrollBeyondLastLine": false,
  "editor.tabSize": 2,
  "editor.rulers": [
    80,
    120
  ],
  "extensions.autoUpdate": true,
  "files.associations": {
    "*.sls": "yaml"
  },
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "git.confirmSync": false,
  "search.useIgnoreFilesByDefault": true,
  "window.reopenFolders": "all",
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vs-seti",
  "workbench.welcome.enabled": true,
}
